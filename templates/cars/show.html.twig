{% extends 'base.html.twig' %}

{% block title %}Cars{% endblock %}

{% block body %}
    <h1>Cars</h1>

    <img src="{{asset('build/images/voitures/' ~ car.photo)}}" class="card-img-top " alt="image de la voiture">

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ car.id }}</td>
            </tr>
            <tr>
                <th>Registration_number</th>
                <td>{{ car.registrationNumber }}</td>
            </tr>
            <tr>
                <th>Km</th>
                <td>{{ car.km }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('cars_index') }}">back to list</a>

    <a href="{{ path('cars_edit', {'id': car.id}) }}">edit</a>

    {{ include('cars/_delete_form.html.twig') }}
{% endblock %}
