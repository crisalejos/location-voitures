

<div class="form-control">
{{ form_start(form) }}
    <div class="row mt-3">
        <div class="col-md-6 ">{{ form_row(form.firstname) }}</div>
        <div class="col-md-6 ">{{ form_row(form.lastname) }}</div>    
    </div> 
    <div class="row mt-3">
        <div class="col-md-6 ">{{ form_row(form.phone) }}</div>
        <div class="col-md-6 ">{{ form_row(form.card) }}</div>    
    </div> 
    <div class="row mt-3 ">
        <div class="col-md-12 form-group">{{ form_row(form.birthdate) }}</div>          
    </div>
    <div class="row mt-3">
        <div class="col-md-6 ">              
            {{ form_row(form.email) }}
           
        </div> 
        <div class="col-md-6 ">              
            
            {{ form_row(form.plainPassword) }}
        </div> 
    </div>
    
    
    <div class="row ">
        <div class="col-md-12 ">
        <button type="submit" class="mt-3 btn btn-primary">Enregistrer</button>
    </div> 
    </div>   
