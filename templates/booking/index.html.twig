{% extends 'base.html.twig' %}

{% block title %}Booking index{% endblock %}

{% block body %}

<h1>Liste de reservations</h1>

    <div class="container p-5">
    <h2 class="fs-5">Recherche de reservations</h2>
        <form class="d-flex" method="POST">
        		<input class="form-control me-2" type="date" name="search" placeholder="Search" aria-label="Search">
       			 <button class="btn btn-secondary" type="submit">Recherche</button>
    	</form>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Start_date</th>
                <th>End_date</th>
                <th>Booking_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for booking in bookings %}
            <tr>
                <td>{{ booking.id }}</td>
                <td>{{ booking.startDate ? booking.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ booking.endDate ? booking.endDate|date('Y-m-d') : '' }}</td>
                <td>{{ booking.bookingDate ? booking.bookingDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('booking_show', {'id': booking.id}) }}">show</a>
                    <a href="{{ path('booking_edit', {'id': booking.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('booking_new') }}">Create new</a>
{% endblock %}
